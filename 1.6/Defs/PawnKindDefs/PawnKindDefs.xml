    <!--_____ Great Khan Pawnkinds _____-->

    <!--___ Base ___-->

    <PawnKindDef Name="FCP_KhankindBase" ParentName="FCP_WastelanderkindBase" Abstract="true">
        <defaultFactionDef>FCP_Faction_GreatKhans</defaultFactionDef>
        <chemicalAddictionChance>0.15</chemicalAddictionChance>
        <invNutrition>2.7</invNutrition>
        <invFoodDef>MealSurvivalPack</invFoodDef>
        <disallowedTraits>
            <li>Nudist</li>
        </disallowedTraits>
        <backstoryFiltersOverride>
            <li>
                <categories>
                    <li>FCP_Backstory_Khan</li>
                    <li>FCP_Backstory_Wastelanders</li>
                    <li>FCP_Backstory_Khan_Child</li>
                </categories>
            </li>
        </backstoryFiltersOverride>
        <apparelIgnoreSeasons>false</apparelIgnoreSeasons>
        <initialWillRange>1~3</initialWillRange>
        <initialResistanceRange>10~17</initialResistanceRange>
    </PawnKindDef>

