<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <!--__________ Great Khan Apparel __________-->

    <!--___ Great Khan Simple Armor ___-->

    <ThingDef ParentName="ApparelMakeableBase">
        <defName>FCP_Apparel_Great_Khan_Simple_Armor</defName>
        <label>Great Khan simple armor</label>
        <description>Lightweight armor worn by lower-ranking Great Khans. Made from scavenged materials and leather, it offers basic protection while maintaining mobility. The tribal designs mark the wearer as a member of the Great Khans.</description>
        <techLevel>Industrial</techLevel>
        <recipeMaker>
            <researchPrerequisite>FCP_Research_Great_Khan_Armory</researchPrerequisite>
            <unfinishedThingDef>UnfinishedArmor</unfinishedThingDef>
            <skillRequirements>
                <Crafting>3</Crafting>
            </skillRequirements>
            <recipeUsers>
                <li>FCP_Production_Tailoring_Workbench</li>
            </recipeUsers>
        </recipeMaker>
        <graphicData>
            <texPath>Apparel/Great_Khan_Simple_Armor/FCP_Great_Khan_Simple_Armor</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>1.0</drawSize>
            <color>(255,255,255)</color>
        </graphicData>
        <stuffCategories>
            <li>Leathery</li>
        </stuffCategories>
        <costStuffCount>60</costStuffCount>
        <thingCategories>
            <li>ApparelArmor</li>
        </thingCategories>
        <statBases>
            <MaxHitPoints>150</MaxHitPoints>
            <WorkToMake>10000</WorkToMake>
            <Mass>3.5</Mass>
            <StuffEffectMultiplierArmor>0.20</StuffEffectMultiplierArmor>
            <StuffEffectMultiplierInsulation_Cold>1.0</StuffEffectMultiplierInsulation_Cold>
            <StuffEffectMultiplierInsulation_Heat>0.50</StuffEffectMultiplierInsulation_Heat>
            <EquipDelay>3</EquipDelay>
        </statBases>
        <equippedStatOffsets>
            <MoveSpeed>-0.08</MoveSpeed>
        </equippedStatOffsets>
        <apparel>
            <bodyPartGroups>
                <li>Torso</li>
                <li>Shoulders</li>
            </bodyPartGroups>
            <wornGraphicPath>Apparel/Great_Khan_Simple_Armor/FCP_Great_Khan_Simple_Armor</wornGraphicPath>
            <layers>
                <li>Middle</li>
            </layers>
            <tags>
                <li>FCP_Great_Khan_Armor</li>
            </tags>
            <defaultOutfitTags>
                <li>Soldier</li>
            </defaultOutfitTags>
        </apparel>
        <tradeTags>
            <li>FCP_Trade_Tag_Great_Khan_Apparel</li>
        </tradeTags>
        <comps>
            <li Class="FCP.Core.CompProperties_LabelColored">
                <rarity>Common</rarity>
            </li>
        </comps>
    </ThingDef>

    <!--___ Great Khan Soldier Armor ___-->

