    <!--___ Suit Armor ___-->

    <ThingDef ParentName="ApparelMakeableBase">
        <defName>FCP_Apparel_Great_Khan_Suit_Armor</defName>
        <label>suit armor</label>
        <description>A stylish yet protective outfit worn by elite Great Khans and high-ranking members. This unique armor combines pre-war formal wear with strategically placed armor plating, creating a distinctive look that commands respect. It's a symbol of status within the tribe.</description>
        <techLevel>Industrial</techLevel>
        <recipeMaker>
            <researchPrerequisite>FCP_Research_Great_Khan_Armory</researchPrerequisite>
            <unfinishedThingDef>UnfinishedArmor</unfinishedThingDef>
            <skillRequirements>
                <Crafting>6</Crafting>
            </skillRequirements>
            <recipeUsers>
                <li>FCP_Production_Tailoring_Workbench</li>
            </recipeUsers>
        </recipeMaker>
        <graphicData>
            <texPath>Apparel/Great_Khan_Suit_Armor/FCP_Great_Khan_Suit_Armor</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>1.0</drawSize>
        </graphicData>
        <costList>
            <Cloth>90</Cloth>
        </costList>
        <thingCategories>
            <li>ApparelArmor</li>
        </thingCategories>
        <statBases>
            <MaxHitPoints>180</MaxHitPoints>
            <WorkToMake>14000</WorkToMake>
            <Mass>4</Mass>
            <ArmorRating_Sharp>0.24</ArmorRating_Sharp>
            <ArmorRating_Blunt>0.18</ArmorRating_Blunt>
