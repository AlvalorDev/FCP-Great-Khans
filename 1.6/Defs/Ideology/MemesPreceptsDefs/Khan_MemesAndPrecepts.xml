<?xml version="1.0" encoding="UTF-8"?>
<Defs>

    <!--__________ Great Khans Ideology __________-->

    <!-- Khan Freedom - Main Great Khans belief system -->

    <MemeDef>
        <defName>FCP_Meme_Khan_Freedom</defName>
        <label>Khan Freedom</label>
        <description>The Great Khans reject the chains of "civilized" society - no laws, no taxes, no rulers except the strongest among them. They value personal freedom above all else, but with that freedom comes responsibility to the tribe. Strength is respected, weakness is despised, and loyalty to your brothers and sisters is sacred. The Khans don't apologize for taking what they need - the wasteland belongs to those strong enough to claim it.</description>
        <iconPath>World_Icon/Great_Khan_Icon/FCP_GreatKhans_World_Icon</iconPath>
        <groupDef>Misc</groupDef>
        <impact>3</impact>
        <randomizationSelectionWeightFactor>0</randomizationSelectionWeightFactor>
        <hiddenInChooseMemes>true</hiddenInChooseMemes>
        <requireOne>
            <li><li>Cannibalism_Disapproved</li></li>
            <li><li>Corpses_DontCare</li></li>
            <li><li>Lovin_Free</li></li>
            <li><li>MarriageName_UsuallyMans</li></li>
            <li><li>SpouseCount_Male_Unlimited</li></li>
            <li><li>SpouseCount_Female_Unlimited</li></li>
            <li><li>Charity_Worthwhile</li></li>
            <li><li>DrugUse_MedicalOrSocial</li></li>
            <li><li>IdeoDiversity_Disapproved</li></li>
            <li><li>Nudity_Male_UncoveredGroinDisapproved</li></li>
            <li><li>Nudity_Female_UncoveredGroinOrChestDisapproved</li></li>
            <li><li>OrganUse_Acceptable</li></li>
            <li><li>Execution_DontCare</li></li>
            <li><li>Skullspike_Desired</li></li>
            <li><li>Slavery_Acceptable</li></li>
            <li><li>Blinding_Horrible</li></li>
            <li><li>Scarification_Horrible</li></li>
        </requireOne>
        <requiredRituals>
            <li>
                <precept>LeaderSpeech</precept>
                <pattern>LeaderSpeech</pattern>
            </li>
        </requiredRituals>
    </MemeDef>

    <!-- Khan Chem Makers -->

    <MemeDef>
        <defName>FCP_Meme_Khan_Chemists</defName>
        <label>Khan Chemists</label>
        <description>The Great Khans have perfected the art of chem production. Their chemists are revered members of the tribe, responsible for creating the drugs that fund the Khan's operations. A skilled chem maker is worth their weight in silver, and their knowledge is passed down through generations.</description>
        <iconPath>World_Icon/Great_Khan_Icon/FCP_GreatKhans_World_Icon</iconPath>
        <groupDef>Misc</groupDef>
        <impact>2</impact>
        <randomizationSelectionWeightFactor>0</randomizationSelectionWeightFactor>
        <hiddenInChooseMemes>true</hiddenInChooseMemes>
        <requireOne>
            <li>
                <li>FCP_IdeoRole_Khan_Chemist</li>
            </li>
        </requireOne>
    </MemeDef>

    <!--__________ Roles __________-->

    <!-- Khan Chemist -->

    <PreceptDef ParentName="PreceptRoleMultiBase">
        <defName>FCP_IdeoRole_Khan_Chemist</defName>
        <label>Khan Chemist</label>
        <description>Khan chemists are the lifeblood of the tribe's economy. They produce the chems that the Khans trade for weapons, supplies, and respect. A master chemist is valued as highly as the tribe's greatest warriors.</description>
        <iconPath>World_Icon/Great_Khan_Icon/FCP_GreatKhans_World_Icon</iconPath>
        <nameMaker>NamerRoleProductionSpecialist</nameMaker>
        <roleRequirements>
            <li Class="RoleRequirement_MinSkillAny">
                <skills>
                    <Intellectual>8</Intellectual>
                    <Crafting>8</Crafting>
                </skills>
            </li>
        </roleRequirements>
        <roleRequiredWorkTags>
            <li>Intellectual</li>
            <li>Crafting</li>
        </roleRequiredWorkTags>
        <roleTags>
            <li>IntellectualSpecialist</li>
        </roleTags>
        <requiredMemes>
            <li>FCP_Meme_Khan_Chemists</li>
        </requiredMemes>
        <roleEffects>
            <li Class="RoleEffect_PawnStatOffset">
                <statDef>DrugSynthesisSpeed</statDef>
                <modifier>0.5</modifier>
            </li>
            <li Class="RoleEffect_PawnStatOffset">
                <statDef>DrugCookingSpeed</statDef>
                <modifier>0.5</modifier>
            </li>
        </roleEffects>
        <grantedAbilities>
        </grantedAbilities>
    </PreceptDef>

</Defs>